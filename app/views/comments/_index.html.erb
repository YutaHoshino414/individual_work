<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <strong>　(<%= comment.user.profile.username %>さん)　</strong>
        <div class="balloon1-left">
          <p>こんにちは。これは例です。</p>
          <p><%= comment.content %></p>
            <div style="float:right;"><%= comment.created_at.strftime('%Y-%m-%d') %><i class="far fa-clock"></i>|
            <% if comment.user_id == current_user.id %>
             <%= link_to edit_item_comment_path(item, comment), remote: true do %>
               <i class="fas fa-edit"></i>｜
             <% end %>
             <%= link_to item_comment_path(comment.item_id, comment.id), method: :delete, remote: true,
                                             data: { confirm: "本当に削除しますか?"} do %>
               <i class="fas fa-trash-alt"></i>
             <% end %>
            <% end %>
             </div>
        </div>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        
      </li>
    <% end %>
  <% end %>
</ul>