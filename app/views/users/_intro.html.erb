<div class="card">
  <div class="card-body introbox">
         <div class="">
            <strong>フォロワー：<%= @user.followers.count %></strong>
            <strong>投稿：<%= @user.items.count %></strong>
            <% if @user.id != current_user.id %> 
            <%= render 'follow_form', user: @user %>
            <% end %>
         </div>
    <div class="row mt-3">
      
        <div class="image_default">
           <i class="fas fa-user-alt"></i>  
         </div>
      
      <div class="col-5">
        <strong>Profile：</strong>
        <div class="card">
          <table class="table">
            <tbody>
               <tr>
                 <th>ユーザー名</th>
                 <td><%= @user.profile.username %></td>
               </tr>
               <tr>
                 <th>氏名</th>
                 <td><%= @user.profile.last_name %><%= @user.profile.first_name %></td>
               </tr>
               <tr>
                 <th>誕生日</th>
                 <td><%= @user.profile.birthday %></td>
               </tr>
               <tr>
                 <th>性別</th>
                 <td><%= @user.profile.sex %></td>
               </tr>
               <tr>
                 <th>身長</th>
                 <td><%= @user.profile.body_length %></td>
               </tr>
             </tbody>
          </table>
       </div>
      </div>
      <div class="col-7">
         <strong>PR：</strong>
         <div class="card">
           <div class="card-body">
             <%= @user.profile.introduction %><br><br><br><br><br><br><br><br>
           </div>
         </div>
       </div>
    </div>
         
    <h4 class="mt-5">フォロー中<i class="fas fa-users"></i></h4><hr>
     <div class="row">
       <% @user.following.each do |user| %>
       <div class="card w-50 mb-2">
           <div class="card-body border-bot">
             <%= link_to user_path(user) do %>
               <%= user.profile.username %>
             <% end %>
             <span>｜<i class="fas fa-users"></i>
               <%= user.followers.count %></span>|
               <i class="fas fa-tshirt"></i>
               <%= user.items.count %>
           </div>
        </div>
        <% end %>
     </div>
  </div>
</div><br><br>