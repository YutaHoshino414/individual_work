<div class="row">
  <div class="col-3">
    <div class="list-group"><br>
      <%= link_to new_item_path do %>
        <span class="list-group-item">投稿する</span>
      <% end %>
        <span class="list-group-item">投稿中アイテム</span>
        <span class="list-group-item">売却済み</span>
    </div><br><br><br>

      <h5>探す<i class="fas fa-list"></i></h5>
      <div class="list-group">
        <%= link_to items_path do %>
          <span class="list-group-item">みんなの投稿</span>
        <% end %>
        <%= link_to users_path do %>
          <span class="list-group-item">ユーザー一覧</span>
        <% end %>
        <span class="list-group-item">Search</span>
        <span class="list-group-item">Search</span>
      </div><br><br><br>

      <h5>設定<i class="fas fa-user-cog"></i></h5>
      <div class="list-group">
        <%= link_to edit_user_path(@user.id) do %>
          <span class="list-group-item">プロフィール編集</span>
        <% end %>
        <span class="list-group-item">setting</span>
        <span class="list-group-item">setting</span>
      </div><br><br><br>
     
  </div>
  <div class="col-9"><br>
     <div class="jumbotron bg-info">
       <div class="row">
          <div class="col-3">
            <div class="image_default">
              <i class="fas fa-user-alt"></i>  
            </div>
          </div>
          <div class="col-8">
            <table class="table w-75">
            <tbody>
              <tr>
                <th>ユーザーid</th>
                <td><%= @user.id %></td>
              </tr>
               <tr>
                 <th>ユーザー名</th>
                 <td><%= @user.username %></td>
               </tr>
               <tr>
                 <th>メールアドレス</th>
                 <td><%= @user.email %></td>
               </tr>
               <tr></tr>
             </tbody>
            </table>
         </div>
      </div>
     </div><br><br><br><br><br><br>
      <h3>フォロー中のユーザー<i class="fas fa-users"></i></h3><br>
      <div class="row">
        <% @user.following.each do |user| %>
        <div class="card w-50 mb-2">
            <div class="card-body">
              id_<%= user.id %>|
              <%= link_to user_path(user) do %>
                <%= user.username %>
              <% end %>
              <span>｜<i class="fas fa-users"></i>
                <%= user.followers.count %></span>
              <div class="float-right">
                <%= render 'follow_form', user: user %>
              </div>
            </div>
        </div>
        <% end %>
      </div>
   </div>
  </div>
</div>