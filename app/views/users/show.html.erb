<div class="row">
  <div class="col-3">
    <% if @user.id == current_user.id %>
      <%= render 'users/sidemenu' %>
    <% end %>
  </div>
  
  <div class="col-9"><br>
    <%= render 'users/intro' %>
     <h3>フォロー中のユーザー<i class="fas fa-users"></i></h3><br>
     <div class="row">
       <% @user.following.each do |user| %>
       <div class="card w-50 mb-2">
           <div class="card-body border-bot">
             <%= link_to user_path(user) do %>
               <%= user.profile.username %>
             <% end %>
             <span>｜<i class="fas fa-users"></i>
               <%= user.followers.count %></span>|
               投稿: <i class="fas fa-camera-retro"></i>
               <%= user.items.count %>
           </div>
        </div>
        <% end %>
     </div><br><br><hr>
     <h3>投稿中のアイテム</i></h3>
     <div class="row ">
       <% @onsell_items.each do |onsell| %>
        <div class="card w-50 mb-2 shadow border-secondary" >
          <div class="row" style="margin:0;">
            <%= link_to item_path(onsell) do %>
              <%= image_tag 'item_default.png', class:"record" %>
            <% end %>
            <div class="col">
              <small><%= onsell.name %></small><br>
              <small><%= onsell.brand %></small><br>
              <small><%= onsell.category.name %></small><br>
              <strong><%= onsell.price %>円</strong><br>
              <i class="fas fa-heart unlike-btn"><small><%= onsell.favorites.count %></small></i>
            </div>
          </div>
         </div>
        <% end %>
      </div>
   </div>
  </div>
</div>