<h1>ユーザー編集</h1>

<div class="w-50">
  <%= form_with(model: @user, local: true) do |f| %>  
    <%= f.label :username,'ユーザー名' %>
    <%= f.text_field :username, class: "form-control" %><br>
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %><br>
    
    <%= f.submit "編集する", class: "btn btn-lg, btn-success" %>
  <% end %><br>
</div><hr>
<%= link_to 'Myページに戻る', user_path(@user.id) %>