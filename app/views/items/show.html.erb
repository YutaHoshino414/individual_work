<h2>アイテム詳細</h2><br>
<div class="row">
  <div class="col-2">
    <%= link_to "投稿一覧", items_path %>
  </div>
  <div class="col-9">
    <div class="jumbo">
      <div class="row">
        <%= image_tag 'item_default.png' %>
        <table class="table w-50">
          <tbody>
              <tr>
                <th>アイテム名</th>
                <td><%= @item.name %></td>
              </tr>
              <tr>
                <th>ブランド名</th>
                <td><%= @item.brand %></td>
              </tr>
              <tr>
                <th>商品カテゴリ</th>
                <td><%= @item.category.parent.name %>>
                  <%= link_to category_path(@item.category_id) do %>
                    <%= @item.category.name %></td>
                  <% end %>
              </tr>
              <tr>
                <th>アイテム紹介</th>
                <td><%= @item.content %></td>
              </tr>
              <tr>
                <th>価格</th>
                <td><%= @item.price.to_s(:delimited, delimiter: ',') %><strong> 円（税込）</strong></td>
              </tr>
              <tr> 
                <th>投稿日</th>
                <td><%= @item.created_at.strftime('%Y-%m-%d %T') %></td>
              </tr>
              <tr>
                <th>投稿者</th>
                <td><%= @item.user.profile.username %></td>
              </tr>
              <tr>
                <th>お気に入り</th>
                <td><i class="fas fa-heart unlike-btn"><%= @item.favorites.count %></i>
                　　　<%= render 'favorites/index' %>
                </td>
              </tr>
          </tbody>
        </table>
        <% if @item.user_id == current_user.id %>
        <%= link_to '編集する', edit_item_path(@item),class:"btn btn-outline-success" %>
        <% end %>
      </div>
    </div> 
   
      <% if @item.buyer_id.present? %>
        <button class="btn btn-secondary btn-lg btn-block align-items-end">SOLD OUT</button>
      <% elsif @item.user_id == current_user.id %>
      <button class="btn btn-primary btn-lg disabled btn-block align-items-end">投稿中アイテム</button>
      <% else%>
        <%= link_to "購入画面にすすむ", purchase_item_path(@item), class: "btn btn-info btn-lg btn-block align-items-end" %>
      <% end %>
      </div>
</div> <hr>
<div class="row">
  <div class="col-2">
  </div>
  <div class="col-9">
    <div class="jumbo">
      <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, item: @item } %>
      </div>
      <%= render partial: 'comments/form', locals: { comment: @comment, item: @item } %>
    </div><br><br><br><br>
  </div>
</div>
