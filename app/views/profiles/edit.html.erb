<h2>プロフィール編集</h2>

<div class="w-50">
  <%= form_with(model: @profile, local: true) do |f| %>  
    <%= f.label :username,'ユーザー名' %>
    <%= f.text_field :username, class: "form-control" %><br>
    <%= f.label :first_user,'名前' %>
    <%= f.text_field :first_name, class: "form-control" %><br>
    <%= f.label :last_name,'苗字' %>
    <%= f.text_field :last_name, class: "form-control" %><br>
    
    <%= f.submit "編集する", class: "btn btn-lg, btn-success" %>
  <% end %><br>
</div><hr>
<%= link_to 'Myページに戻る', user_path(@profile.user_id) %>