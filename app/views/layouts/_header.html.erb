<div class="header">
  <%= link_to items_path, class:'icon' do %>
    <%= image_tag 'Page-1.png', class:'icon' %>
  <% end %>
  <div>
    <fieldset disabled>
      <div class="w-75 mx-auto" >
        <%= form_with url: items_path, method: :get, local: true do |f| %>
          <div class="input-group mb-3 mt-2" style="display:flex;">
            <%= f.text_field :name, placeholder: "無効..", class: "form-control" %>
           <div class="input-group-append">
            <%= f.button :type => "submit", class: 'btn btn-dark' do %>
              <i class="fas fa-search"></i>
              <% end %>
          </div>
        <% end %>
      </div>
    </fieldset>
    <%= render 'categories/menu' %>
  </div>

  <div class="log_in"><br>
    <% if current_user.present? %>
    <p>ようこそ、<%= current_user.email %>さん</p>
    <% else %>
      <p>こんにちは、ゲストさん！</p>
    <% end %>

    <% if user_signed_in? %>
      <%= link_to user_path(current_user.id) do%>
        <strong><i class="fas fa-home"></i>マイページ</strong>
      <% end %><span>|</span>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "新規登録", new_user_registration_path %>
        <%= link_to "ログイン", new_user_session_path %>
    <% end %>
 </div>
</div>